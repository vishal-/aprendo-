// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserDetails {
  id            String    @id @default(cuid())
  firstName     String
  lastName      String
  email         String    @unique
  phone         String
  address       String
  city          String
  country       String
  postalCode    String
  photoURL      String?/
  role          UserRole
}

enum UserRole {
  ADMIN
  PARENT
  TUTOR
  STUDENT
  MODERATOR
  ACADEMY
}
